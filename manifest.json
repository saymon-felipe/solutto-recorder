{
    "manifest_version": 3,
    "name": "Solutto Recorder",
    "version": "1.0",
    "description": "O Solutto Recorder é uma extensão completa para gravação de tela e webcam. Com ele, você pode gravar, baixar, converter e editar vídeos facilmente, além de salvá-los diretamente no Google Drive.",
    "permissions": [
      "tabs",
      "scripting",
      "storage",    
      "activeTab",
      "tabCapture",
      "desktopCapture",
      "declarativeContent",
      "downloads",
      "identity"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "host_permissions": [
      "http://*/",
      "https://*/*",
      "https://www.googleapis.com/*"
    ],
    "oauth2": {
      "client_id": "251081527348-jvml84rdjkf9ah12ajbq9l73rul7cvt7.apps.googleusercontent.com", 
      "scopes": [
        "https://www.googleapis.com/auth/drive.file", 
        "https://www.googleapis.com/auth/drive" 
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["assets/*", "popup.html", "popup.js", "content.js", "style.css", "lib/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*", "<all_urls>"],
        "js": ["content.js", "popup.js", "lib/ffmpeg/umd/ffmpeg.js", "lib/ffmpeg/util.js"],
        "css": ["style.css"]
      }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
    }
  }
  