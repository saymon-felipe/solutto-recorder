{
    "manifest_version": 3,
    "name": "Solutto Gravador",
    "version": "1.0",
    "description": "Realizar gravações de tela e subir para o drive ou para o sistema Solutto",
    "permissions": [
      "tabs",
      "scripting",
      "identity", 
      "storage",    
      "activeTab",
      "tabCapture",
      "desktopCapture",
      "declarativeContent"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "action": {
      "default_icon": "assets/icon.png"
    },
    "host_permissions": [
      "http://*/",
      "https://*/*"
    ],
    "oauth2": {
      "client_id": "1061159513511-ns38bbb0b0r8ri4cobfmttmab7g5ta5b.apps.googleusercontent.com", 
      "scopes": [
        "https://www.googleapis.com/auth/drive.file", 
        "https://www.googleapis.com/auth/drive" 
      ]
    },
    "web_accessible_resources": [
      {
        "resources": ["assets/*", "popup.html", "popup.js", "content.js", "style.css", "lib/*"],
        "matches": ["<all_urls>"]
      }
    ],
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*", "<all_urls>"],
        "js": ["content.js", "popup.js", "drive.js", "lib/ffmpeg/umd/ffmpeg.js", "lib/ffmpeg/util.js"],
        "css": ["style.css"]
      }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
    }
  }
  